<h2>Now, Let's get started.</h2>
<form method="post" action="/submit" novalidate>
  <div class="form-group">
    <label for="inputFullNameLabel">Full Name</label>
    <input
      type="text"
      name="fullName"
      class="form-control"
      id="inputFullNameLabelText"
      aria-describedby="emailHelp"
      placeholder="Full Name"
    />
  </div>
  <div class="form-group">
    <label for="inputPhoneNumberLabel">Phone Number</label>
    <input
      type="tel"
      class="form-control"
      name="phone"
      id="inputFullNameLabelText"
      aria-describedby="emailHelp"
      placeholder="Phone Number"
    />
  </div>
  <div class="form-group">
    <label for="inputEmailAddressLabel">Email address</label>
    <input
      name="email"
      type="email"
      class="form-control"
      id="inputEmailAddress"
      aria-describedby="emailHelp"
      placeholder="Enter email"
    />
  </div>
  <div class="form-group">
    <label for="inputListOfItemsLabel">List of Items</label>
    <textarea
      name="items"
      class="form-control"
      id="inputListOfItems"
      rows="3"
    ></textarea>
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>
</form>
