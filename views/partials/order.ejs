<form method="post" action="/submit" novalidate>
  <div class="form-group">
    <label for="store-selection">Select Store Location:</label>
    <div class="radio">
      <label
        ><input type="radio" name="storelocation" checked />Devisthan,
        Phalebas</label
      >
    </div>
    <div class="radio">
      <label
        ><input type="radio" name="storelocation" />Khanigaun, Phalebas</label
      >
    </div>
    <div class="radio disabled">
      <label><input type="radio" name="storelocation" />Kurgha, Phalewas</label>
    </div>
  </div>

  <div class="form-group">
    <label for="selected-store">Select Store :</label>
    <select class="form-control" id="selected-store">
      <option>Bhusal Kirana Store, Chandantar</option>
      <option>Asish Kirana Store, Saun Pari</option>
      <option>DD Store, Rahale</option>
    </select>
  </div>

  <div class="form-group">
    <label for="inputFullNameLabel">Full Name</label>
    <input
      type="text"
      class="form-control"
      id="inputFullNameLabelText"
      aria-describedby="emailHelp"
      placeholder="Full Name"
    />
    <small id="fullNameHelp" class="form-text text-muted"
      >Your name will be used for the contact.</small
    >
  </div>
  <div class="form-group">
    <label for="inputPhoneNumberLabel">Phone Number</label>
    <input
      type="text"
      class="form-control"
      id="inputFullNameLabelText"
      aria-describedby="emailHelp"
      placeholder="Phone Number"
    />
    <small id="phoneNumberHelp" class="form-text text-muted"
      >Your primary phone number.</small
    >
  </div>
  <div class="form-group">
    <label for="inputEmailAddressLabel">Email address</label>
    <input
      type="email"
      class="form-control"
      id="inputEmailAddress"
      aria-describedby="emailHelp"
      placeholder="Enter email"
    />
    <small id="inputEmailAddressLabelHelp" class="form-text text-muted"
      >We'll never share your email with anyone else.</small
    >
  </div>
  <div class="form-group">
    <label for="inputListOfItemsLabel">List of Items</label>
    <textarea class="form-control" id="inputListOfItems" rows="3"></textarea>
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>
</form>
